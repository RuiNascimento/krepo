<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.kbuild" name="KBuilds" version="0.0.1" provider-name="krepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
		<summary lang="en">KBuilds</summary>
		<description lang="en">In this addon you can find my personal kodi builds</description>
		<disclaimer lang="en">Visit https://github.com/RuiNascimento/krepo for more information.</disclaimer>
		<forum>https://github.com/RuiNascimento/krepo</forum>
		<source>https://github.com/RuiNascimento/krepo</source>
		<website>https://github.com/RuiNascimento/krepo</website>
		<platform>all</platform>
	</extension>
</addon>

    <addon id="repository.krepo" name="Kalashe Repo" version="0.0.1" provider-name="kalashenicof">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Kalashe Repo">
            <info compressed="false">https://raw.githubusercontent.com/RuiNascimento/kerepo/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/RuiNascimento/kerepo/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/RuiNascimento/kerepo/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repository for my collection of addons and my builds</summary>
            <description>Repository of my favorite addons and my custom kodi builds</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
